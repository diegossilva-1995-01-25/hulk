<!doctype html>
<html>
<head>

<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<title>{{metadata.title}}</title>
<meta name="description" content="{{metadata.description}}" />

{{#metadata.canonical}}<link rel="canonical" href="{{{.}}}" />{{/metadata.canonical}}
{{#metadata.prev}}<link rel="prev" href="{{{.}}}" />{{/metadata.prev}}
{{#metadata.next}}<link rel="next" href="{{{.}}}" />{{/metadata.next}}

</head>
<body>

<main>
	{{>content}}
</main>

<script defer src='https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.2/MathJax.js?config=TeX-MML-AM_CHTML'></script>
<script defer src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"></script>
<script defer>

var Page = {

	enhance: function(){
		var head = document.getElementsByTagName("head")[0];

		// load component styles
		[ "https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/solarized-light.min.css" ].forEach(function(href){
			var link  = document.createElement("link");
			link.rel  = "stylesheet";
			link.href = href;
			link.type = "text/css";

			head.appendChild(link);
		});

		// make it great for math
		MathJax.Hub.Config({
			tex2jax: {inlineMath: [["$","$"]]}
		});

		// and also for programmers
		var blocks = Array.prototype.slice.call( document.querySelectorAll("pre code") );
		blocks.forEach( function(block, i){
			hljs.highlightBlock(block);
		} );
	}

};

window.addEventListener("DOMContentLoaded", Page.enhance);

</script>
</body>
</html>
